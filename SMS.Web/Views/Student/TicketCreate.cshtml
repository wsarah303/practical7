@model Ticket

<h3 class="mt-4">Create Ticket</h3>

<!-- TBC - add form to create a ticket -->

       

        <div class="card rounded shadow p-3">
    <form asp-action="TicketCreate">

    
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

             <input type="hidden" asp-for="StudentId" class="form-control"/>

        <div class="mt-3">
            <label asp-for="Issue" class="form-label"></label>
            <input asp-for="Issue" class="form-control"/>
            <span asp-validation-for="Issue" class="text-danger"></span>
        </div>
    

        <div class="mt-3">
            <input type="submit" value="TicketCreate" class="btn btn-primary"/>
            <a class="btn btn-secondary" asp-action="Index">Cancel</a>
        </div>

    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}